{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
    },
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/**/*.ts",
    "src/*.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
  ]
}